<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="propertiesArray">
      <list>
         <ref bean="myPropsFromFile"/>
         <ref bean="myPropsFromDb"/>
      </list>
    </property>
  </bean>

  <bean id="myPropsFromFile"
    class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="locations">
			<list>
				<value>file:/usr/local/etc/produban-data-system_DE.properties</value>
			</list>
		</property>
  </bean>

  <bean id="myPropsFromDb" class="org.apache.commons.configuration.ConfigurationConverter" factory-method="getProperties">
    <constructor-arg>
      <bean class="org.apache.commons.configuration.DatabaseConfiguration">
        <constructor-arg>
          <bean id="ds1" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
            <property name="driverClassName" ref="bbdd.sistema.driver"/>
            <property name="url" ref="bbdd.sistema.url"/>
            <property name="username" ref="bbdd.sistema.username"/>
            <property name="password" ref="bbdd.sistema.password"/>
          </bean>
        </constructor-arg>
        <constructor-arg ref="bbdd.sistema.config.table"/>
        <constructor-arg ref="bbdd.sistema.config.keyColumn"/>
        <constructor-arg ref="bbdd.sistema.config.valueColumn"/>
      </bean>
    </constructor-arg>
  </bean>

  <bean id="bbdd.sistema.driver"
    class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="myPropsFromFile" />
    <property name="targetMethod" value="getProperty" />
    <property name="arguments">
      <list>
        <value>bbdd.sistema.driver</value>
      </list>
    </property>
  </bean>

  <bean id="bbdd.sistema.url"
    class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="myPropsFromFile" />
    <property name="targetMethod" value="getProperty" />
    <property name="arguments">
      <list>
        <value>bbdd.sistema.url</value>
      </list>
    </property>
  </bean>

  <bean id="bbdd.sistema.username"
    class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="myPropsFromFile" />
    <property name="targetMethod" value="getProperty" />
    <property name="arguments">
      <list>
        <value>bbdd.sistema.user</value>
      </list>
    </property>
  </bean>

  <bean id="bbdd.sistema.password"
    class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="myPropsFromFile" />
    <property name="targetMethod" value="getProperty" />
    <property name="arguments">
      <list>
        <value>bbdd.sistema.pass</value>
      </list>
    </property>
  </bean>

  <bean id="bbdd.sistema.config.table"
    class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="myPropsFromFile" />
    <property name="targetMethod" value="getProperty" />
    <property name="arguments">
      <list>
        <value>bbdd.sistema.config.table</value>
      </list>
    </property>
  </bean>

  <bean id="bbdd.sistema.config.keyColumn"
    class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="myPropsFromFile" />
    <property name="targetMethod" value="getProperty" />
    <property name="arguments">
      <list>
        <value>bbdd.sistema.config.keyColumn</value>
      </list>
    </property>
  </bean>

  <bean id="bbdd.sistema.config.valueColumn"
    class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="myPropsFromFile" />
    <property name="targetMethod" value="getProperty" />
    <property name="arguments">
      <list>
        <value>bbdd.sistema.config.valueColumn</value>
      </list>
    </property>
  </bean>
  
  <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
	<property name="targetClass" value="org.springframework.security.core.context.SecurityContextHolder"/>
	<property name="targetMethod" value="setStrategyName"/>
	<property name="arguments"><list><value>MODE_INHERITABLETHREADLOCAL</value></list></property>
  </bean>

</beans>
